    "train": {
        "n_epoch": 1e8,
        "n_iter": 1e8,
        "val_epoch": 5,
        "save_checkpoint_epoch": 10,
        "log_iter": 1e3,
        "tensorboard": true
    },
    "debug": {
        "val_epoch": 1,
        "save_checkpoint_epoch": 1,
        "log_iter": 2,
        "debug_split": 50
