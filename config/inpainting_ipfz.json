    "datasets": {
        "train": {
            "which_dataset": {
                "name": ["data.dataset", "InpaintDataset"],
                "args": {
                    "data_root": "/home/jovyan/cloud/Palette/PaletteRepository/Palette-Image-to-Image-Diffusion-Models/datasets/ipfz/flist/true_data/train.flist",
                    "data_len": -1,
                    "mask_config": {
                        "mask_mode": "ebsd_missing_data_simulation"
