                "val_args": {
                    "batch_size": 14,
                    "num_workers": 3,
                    "shuffle": false,
                    "pin_memory": true,
                    "drop_last": false
                }
            }
        },
        "test": {
            "which_dataset": {
                "name": "InpaintDataset",
                "args": {
                    "data_root": "/home/jovyan/cloud/Palette/PaletteRepository/Palette-Image-to-Image-Diffusion-Models/datasets/ipfz/flist/true_data/test.flist",
                    "mask_config": {
                        "mask_mode": "ebsd_missing_data_simulation"
                    }
                }
            },
            "dataloader": {
                "args": {
                    "batch_size": 10,
                    "num_workers": 3,
                    "pin_memory": true
                }
            }
        }
    },
    "model": {
        "which_model": {
            "name": ["models.model", "Palette"],
            "args": {
                "sample_num": 8,
                "task": "inpainting",
